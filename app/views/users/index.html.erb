<p id="notice"><%= notice %></p>

<h1 align="center">Welcome New User List</h1>

<%= form_tag(search_path, method: "get") do %>
  <%= label_tag(:name, "Search User:") %>
  <%= text_field_tag(:name) %>
  <%= submit_tag("Search") %>
<% end %>
<br>

<table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp" align="center">
  <thead>
    <tr>
      <th class="mdl-data-table__cell--non-numeric">Name</th>
      <th>email</th>
      <th>joined at</th>
    </tr>
  </thead>

  <tbody>
    <% i = 0 %>
    <% @users.each do |user| %>
      
      <tr>
        <td class="mdl-data-table__cell--non-numeric">
          <%= link_to user_path(user.id), :class => "mdl-navigation__link" do %>
            <%= user.name %></td>
          <% end %>
        <td><%= user.email %></td>
        <td><%= user.register_date %></td>
      </tr>
      <% i += 1 %>
      <% if i == 10 %>
        <% break %>
      <% end %>
    <% end %>
  </tbody>
</table>
