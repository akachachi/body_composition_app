<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this value from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div style="color:#FE2E2E">
  <%= flash[:danger] %>
</div>


  <div class="mdl-textfield mdl-js-textfield">
    <%= f.label :name , class: "mdl-textfield__label" %>
    <%= f.text_field :name, class: "mdl-textfield__input" %>
  </div>
  <br>

  <div class="mdl-textfield mdl-js-textfield">
    <%= f.label :email , class: "mdl-textfield__label" %>
    <%= f.email_field :email, class: "mdl-textfield__input" %>
  </div>
  <br>

  <div class="mdl-textfield mdl-js-textfield">
    <%= f.label :password , class: "mdl-textfield__label" %>
    <%= f.text_field :password, class: "mdl-textfield__input", type: "password" %>
  </div>
  <br>

  <div class="mdl-textfield mdl-js-textfield">
    <%= f.label :password_confirmation , class: "mdl-textfield__label" %>
    <%= f.text_field :password_confirmation, class: "mdl-textfield__input", type: "password" %>
  </div>


  <div class="actions" >
    <%= f.submit "Sign in", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
  </div>
<% end %>

<%= link_to "Home", home_path %>
